@model IEnumerable<VcsSystem_assignment.Models.Employee>

@{
    ViewData["Title"] = "Employee Index";
}

<div class="container">
    <div class="d-flex justify-content-between mt-2 mb-2">
        <h2>Employees Record</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#employeeModal" onclick="clearTextBox();">
            Add New Employee
        </button>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Picture</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>

<div class="modal fade" id="employeeModal" tabindex="-1" role="dialog" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="employeeModalLabel">Add Employee</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <input type="hidden" id="id" name="id" />
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required />
                    </div>
                    <div class="form-group">
                        <label for="dateOfBirth">Date of Birth</label>
                        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
                    </div>
                    <div class="form-group">
                        <label for="picture">Picture</label>
                        <input type="file" class="form-control" id="picture" name="picture" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="addEmployee();">Add Employee</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="updateEmployee();">Update</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this employee?</p>
                <input type="hidden" id="hiddenEmployeeId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="deleteEmployee();">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        loadData();
    });

    function loadData() {
        $.ajax({
            url: '/Employee/GetAll',
            type: 'GET',
            success: function (result) {
                if (result.data) {
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                        html += '<td>' +  (key+1) + '</td>';
                        html += '<td>' + item.name + '</td>';
                        html += '<td>' + new Date(item.dateOfBirth).toLocaleDateString() + '</td>';
                        html += '<td>' + item.email + '</td>';
                        html += '<td>' + (item.picture ? '<img src="' + item.picture + '" style="width:50px;height:50px;" />' : 'No Picture') + '</td>';
                        html += '<td><button class="btn btn-warning" onclick="getByID(' + item.id + ')">Edit</button> <button class="btn btn-danger" onclick="confirmDelete(' + item.id + ')">Delete</button></td>';
                        html += '</tr>';
                    });
                    $('.tbody').html(html);
                } else {
                    alert('No data returned.');
                }
            },
            error: function (error) {
                alert('Error: ' + error.responseText);
            }
        });
    }

    function addEmployee() {
        var formData = new FormData($('#employeeForm')[0]);
        $.ajax({
            url: '@Url.Action("AddEmployee", "Employee")',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                loadData();
                $('#employeeModal').modal('hide');
                alert(response.message);
            },
            error: function (error) {
                alert('Error: ' + error.responseText);
            }
        });
    }

    function getByID(id) {
        $.ajax({
            url: '/Employee/GetById/' + id,
            type: 'GET',
            success: function (response) {
                $('#id').val(response.data.id);
                $('#name').val(response.data.name);
                $('#dateOfBirth').val(new Date(response.data.dateOfBirth).toISOString().split('T')[0]);
                $('#email').val(response.data.email);
                $('#employeeModalLabel').text('Update Employee');
                $('#btnUpdate').show();
                $('#btnAdd').hide();
                $('#employeeModal').modal('show');
            },
            error: function (error) {
                alert('Error: ' + error.responseText);
            }
        });
    }

    function updateEmployee() {
        var formData = new FormData($('#employeeForm')[0]);
        $.ajax({
            url: '@Url.Action("UpdateEmployee", "Employee")',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                loadData();
                $('#employeeModal').modal('hide');
                alert(response.message);
            },
            error: function (error) {
                alert('Error: ' + error.responseText);
            }
        });
    }

    function confirmDelete(id) {
        $('#hiddenEmployeeId').val(id);
        $('#deleteConfirmationModal').modal('show');
    }

    function deleteEmployee() {
        var id = $('#hiddenEmployeeId').val();
        $.ajax({
            url: '/Employee/DeleteEmployee/' + id,
            type: 'POST',
            success: function (response) {
                loadData();
                $('#deleteConfirmationModal').modal('hide');
                alert(response.message);
            },
            error: function (error) {
                alert('Error: ' + error.responseText);
            }
        });
    }

    function clearTextBox() {
        $('#id').val("");
        $('#name').val("");
        $('#dateOfBirth').val("");
        $('#email').val("");
        $('#btnUpdate').hide();
        $('#btnAdd').show();
        $('#employeeModalLabel').text('Add Employee');
    }
</script>
