@model IEnumerable<VcsSystem_assignment.Models.Employee>

@{
    ViewBag.Title = "Employee Details";
}
<div>


<div class="d-flex justify-content-between mb-3">
    <h2>Employee Details</h2>
    <a asp-action="Create" class="btn btn-primary">Add Employee</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.ID</td>
                    <td>@employee.Name</td>
                    <td>@employee.DateOfBirth.ToShortDateString()</td>
                    <td>@employee.Email</td>
                    <td>
                        @if (!string.IsNullOrEmpty(employee.Picture))
                        {
                            <img src="@employee.Picture" alt="@employee.Name" style="width:50px;height:50px;" />
                        }
                        else
                        {
                            <span>No Picture</span>
                        }
                    </td>
                        <td class="btn-group w-100" role="group">
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.ID"
                               class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">Edit</a>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.ID"
                               class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">Delete</a>
                        </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No employees found.</td>
            </tr>
        }
    </tbody>
</table>
</div>